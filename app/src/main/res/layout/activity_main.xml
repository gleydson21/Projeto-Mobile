<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- RecyclerView para exibir a lista de tarefas -->

    <!-- Bot찾o para adicionar nova tarefa -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTasks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/buttonAddTask"
        android:layout_marginBottom="5dp"
        android:padding="8dp" />

    <Button
        android:id="@+id/buttonAddTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar Tarefa"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_button_background"
        android:textColor="@color/blue_button" />

    <!-- Layout para os bot천es de editar e excluir -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@id/buttonAddTask"
        android:gravity="center">

        <!-- Bot찾o para editar tarefa -->
        <Button
            android:id="@+id/buttonEditTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar Tarefa"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_button_background"
            android:textColor="@color/green_button" />

        <!-- Bot찾o para excluir tarefa -->
        <Button
            android:id="@+id/buttonDeleteTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Excluir Tarefa"
            android:background="@drawable/rounded_button_background"
            android:textColor="@color/red_button" />

    </LinearLayout>

</RelativeLayout>
